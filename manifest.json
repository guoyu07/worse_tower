{
  "manifest_version": 2,

  "name": "Tower 团队内页面非法改装",
  "description": "如题。未取得彩程官方授权。",
  "version": "0.1.2",
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "page_action": {
    "default_icon": "icon-19.png",
    "default_title": "Tower 团队内页面非法改装"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts" : [
    {
      "matches": [
        "*://tower.im/teams/*",
        "*://tower.im/projects/*",
        "*://tower.im/members/*",
        "*://cn.tower.im/teams/*",
        "*://cn.tower.im/projects/*",
        "*://cn.tower.im/members/*"
      ],
      "css": ["inject.css"],
      "js" : [ "jquery-2.1.4.min.js", "inject.js" ],
      "all_frames": false,
      "run_at": "document_end"
    }
  ]
}
